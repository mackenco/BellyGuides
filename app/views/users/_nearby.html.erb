<section class="nearby">

  <form
    class="geocode-form"
    action="<%= nearby_restaurants_url %>"
    method="get">

    Enter your location
    <label><input type="text" name="restaurant[address]"></label>
    <input type="hidden" name="restaurant[name]" value="user_location">
    <label>Mile radius?
      <input type="text" name="distance"></label>
    <input type="submit" value="Find Near Me!">
    <input type="hidden" name="authenticity_token"
          value="<%= form_authenticity_token %>">
  </form>

</section>

