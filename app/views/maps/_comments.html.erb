<section class="comment-new-form">
  <%= form_for([map, comment], action: :create, remote: true,
    html: {id: "comment-form", multipart: true}) do |f| %>
    <%= f.label :text, "Write a new comment..." %><br>
    <%= f.text_area :text, rows: 3%><br>
    <%= f.submit %>
  <% end %>
</section>

<h2>Comments</h2>
<section class="comments">
  <%= render comments %>
</section>
