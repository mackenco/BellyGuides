<%= form_for @map do |f| %>

  <div class="map-fields">
    <%= f.label :title, "Map Title (Required)" %>
    <%= f.text_field :title %>

    <%= f.label :description, "Map Description (Required)" %>
    <%= f.text_area :description , rows: 3%>
  </div>

  <%= f.fields_for :restaurants do |builder| %>
     <%= render "restaurant_fields", f: builder %>
  <% end %>

  <%= link_to_add_fields "Add Restaurant", f, :restaurants %>
  <%= f.submit "Submit" %>

<% end %>

