<form action="users_url" method="post" class="sign-up hide">
  <input
    name="authenticity_token"
    type="hidden"
    value="<%= form_authenticity_token %>">

  <label>Username
    <input
      id="user_username"
      name="user[username]"
      type="text"></label>
  <br>

  <label>Email
    <input
      id="user_email"
      name="user[email]"
      type="text"></label>
  <br>

  <label>Password
    <input
      id="user_password"
      name="user[password]"
      type="password"></label>
  <br>

  <input type="submit" value="Get Started!">
</form>
