<form class="hide guest" action="<%= session_url %>" method="post">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">

  <label>Username
  <input
     id="user_username"
     name="user[username]"
     type="text"
     value="Guest"></label>
  <br>

  <label>Password
  <input
     id="user_password"
     name="user[password]"
     type="text"
     value="guest_password"></label>
  <br>

  <input type="submit" value="Log in">
</form>
