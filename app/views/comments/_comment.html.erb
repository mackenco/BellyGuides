<article>
  <div><%= comment.text %></div>

  <footer>
    <small>
      <%= image_tag comment.author.profile_pic.url(:very_small) %>
      <strong><%= comment.author.username %></strong>
      <time><%= time_ago_in_words(comment.created_at) %> ago</time>
      <% if comment.author == current_user%>
        <%= link_to "Delete", map_comment_url(comment.map, comment), method: :delete %>
      <% end %>
    </small>
  </footer>
</article>
<hr>

